    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Execute File",
            "program": "${file}",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
			"name": "debug tests",
            "type": "node",
            "request": "launch",
			"program": "${workspaceRoot}/node_modules/.bin/_mocha",
			"stopOnEntry": false,
			"args": ["./tests/**/*.js", "--no-timeouts"]
        }
    ]
}